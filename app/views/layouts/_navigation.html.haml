.navmenu.navmenu-default.navmenu-fixed-left.offcanvas.hidden-print{"aria-hidden" => "true"}
  - if current_user.nil?
    #user-sign-up.row
      .col-xs-1 &nbsp;
      .col-xs-5
        =link_to "Sign In", log_in_path, class: 'btn btn-default btn-lg btn-block'
      .col-xs-5
        =link_to "Sign Up", sign_up_path, class: 'btn btn-default btn-lg btn-block'
      .col-xs-1 &nbsp;
    .row
      .col-xs-1 &nbsp;
      .col-xs-10
        =link_to "Login with Facebook", '#', onclick: 'FBLogin();', class: 'btn btn-default btn-lg btn-block'
      .col-xs-1 &nbsp;

  - else
    %li
      %a{href: log_out_path} Sign Out

    %li#navi-avatar.clearfix
      %a{href: user_path(current_user.id)}
        .pull-left
          %i.fa.fa-user.fa-3x
        .pull-left
          .text-ellipsis
            %strong= current_user.username
          %span.ellipsis= current_user.name
    %li
      - if current_user.size.nil?
        =link_to "Size Profile", new_user_size_path(user_id: current_user.id)
      - else
        =link_to "Size Profile", user_size_path(user_id: current_user.id, id: current_user.size.id)
    %li
      =link_to "Appointments", new_appointment_path(user_id: current_user.id)
    %li
      =link_to "Snazzy Suggestions", my_matches_user_path(id: current_user.id)

  %ul.nav.nav-stacked
    %li
      =link_to "About Us", about_us_path
    %li
      =link_to "Terms of Use", terms_path
    %li
      =link_to "FAQs", faqs_path
    %li
      =link_to "Privacy Policy", privacy_path
    %li
      =link_to "How to Measure", measure_path
    %li
      =link_to "How To Use", how_to_use_path

  %hr/

  .text-center
    %div
      %small.text-muted
        &copy;
        =Time.now.year
        SnazzDat Inc.
    %div
      %small{style:"color: #999"} Powered by Retailigence

.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
  .container-fluid
    .navbar-header

      %a#off-canvas-toggle{href: '#', data:{toggle: 'offcanvas', target: '.navmenu', canvas: 'body'}}
        %i.fa.fa-2x.fa-align-justify

      %a#nav-brand{href: root_path} SnazzDat
    #main-search-bar
      .hidden-xs
        = form_tag search_index_path, method: :get, class: 'navbar-form', role: 'search' do
          .form-group
            =text_field_tag :search, params[:search], :class=>'form-control', placeholder: 'search apparel'
      .visible-xs
        = form_tag search_index_path, method: :get, class: 'navbar-form', role: 'search' do
          .form-group
            =text_field_tag :search, params[:search], :class=>'form-control', placeholder: 'search apparel'
