%h1 Listing Appointments

%table
  %tr
    %th Store
    %th City
    %th Zip Code
    %th Email
    %th Date
    %th
    %th
    %th
  - @appointments.each do |a|
    %tr
      %td= a.receiver
      %td= a.city
      %td= a.zip_code
      %td= a.email
      %td= a.date
      %td= link_to 'Show', user_appointment_path(id: a.id)
      %td= link_to 'Edit', edit_user_appointment_path(id:a.id)
      %td= link_to 'Destroy', user_appointment_path(id: a.id, partner_id: a.partner.id), :method => :delete, :data => { :confirm => 'Are you sure?' }

= link_to 'New Appointment', new_user_appointment_path
