%h3 My Account
.panel.panel-default
  .panel-heading
    .pull-right
      =link_to "Edit", edit_user_path, class: 'btn-link'
    Account Information
  .panel-body
    -#%p
      %strong Username:
      =@user.username
    %p
      %strong Full Name:
      =@user.name
    %p
      %strong Gender:
      =@user.gender
    -unless @user.email.blank?
      %p
        %strong Email:
        =@user.email

    - unless @user.address1.blank?
      %p
        %strong Address:
        %br/
        =@user.address1
        - unless @user.address2.blank?
          =@user.address2
        %br/
        ="#{@user.city}, #{@user.state} #{@user.zip_code}"

